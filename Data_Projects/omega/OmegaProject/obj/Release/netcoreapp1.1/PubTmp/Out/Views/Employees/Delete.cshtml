@model OmegaProject.Models.Employee

@{
    ViewData["Title"] = "Xóa";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Xóa</h2>

<h3>Bạn có chắc chắn muốn xóa không ?</h3>
<div>
    <h4>Nhân viên</h4>
    <hr />
    <dl class="dl-horizontal">
        <input type="hidden" asp-for="EmpId" />
        <dt>
            Mã nhân viên
        </dt>
        <dd>
            @Html.DisplayFor(model => model.EmpNo)
        </dd>
        <dt>
            Tên nhân viên
        </dt>
        <dd>
            @Html.DisplayFor(model => model.EmpName)
        </dd>
        <dt>
            Số điện thoại
        </dt>
        <dd>
            @Html.DisplayFor(model => model.Phone)
        </dd>
        <dt>
            Email
        </dt>
        <dd>
            @Html.DisplayFor(model => model.Email)
        </dd>
        <dt>
            Giới tính
        </dt>
        <dd>
            @(Model.EmpGender ? "Nam" : "Nữ")
        </dd>
        <dt>
            Không hiển thị
        </dt>
        <dd>
            @Html.DisplayFor(model => model.EmpDisabled)
        </dd>
        <dt>
            Phòng ban
        </dt>
        <dd>
            @Html.DisplayFor(model => model.Dep.DepName)
        </dd>
        <dt>
            Chức vụ
        </dt>
        <dd>
            @Html.DisplayFor(model => model.Duty.DutyName)
        </dd>
        <dt>
            Hình ảnh
        </dt>
        <dd>
            @Html.DisplayFor(model => model.Photo.PhotoName)
        </dd>
        <dt>
            Trạng thái
        </dt>
        <dd>
            @Html.DisplayFor(model => model.Status.StatusName)
        </dd>
    </dl>

    <form asp-action="Delete">
        <div class="form-actions no-color">
            <input type="submit" value="Delete" class="btn btn-default" /> |
            <a asp-action="Index">Trở lại danh sách</a>
        </div>
    </form>
</div>
