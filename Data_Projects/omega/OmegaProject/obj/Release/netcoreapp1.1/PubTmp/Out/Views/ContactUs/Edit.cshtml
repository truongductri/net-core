@model OmegaProject.Models.ContactUs

@{
    ViewData["Title"] = "Liên hệ";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Chỉnh sửa</h2>

<form asp-action="Edit">
    <div class="form-horizontal">
        <h4>Liên hệ</h4>
        <a asp-action="Index">Trở lại danh sách</a>
        <hr />
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
    <input type="hidden" asp-for="ConId" />
        <div class="form-group">
            <label class="col-md-2 control-label">Tiêu đề</label>
            <div class="col-md-10">
                <input asp-for="ConTitle" class="form-control" />
                <span asp-validation-for="ConTitle" class="text-danger"></span>
            </div>
        </div>
        <div class="form-group">
            <label class="col-md-2 control-label">Người liên hệ</label>
            <div class="col-md-10">
                <input asp-for="ConName" class="form-control" />
                <span asp-validation-for="ConName" class="text-danger"></span>
            </div>
        </div>
        <div class="form-group">
            <label asp-for="ConEmail" class="col-md-2 control-label"></label>
            <div class="col-md-10">
                <input asp-for="ConEmail" class="form-control" />
                <span asp-validation-for="ConEmail" class="text-danger"></span>
            </div>
        </div>
        <div class="form-group">
            <label class="col-md-2 control-label">Số điện thoại</label>
            <div class="col-md-10">
                <input asp-for="ConPhone" class="form-control" />
                <span asp-validation-for="ConPhone" class="text-danger"></span>
            </div>
        </div>
        <div class="form-group">
            <label class="col-md-2 control-label">Nội dung</label>
            <div class="col-md-10">
                <textarea asp-for="ConContent" class="form-control" ></textarea>
                <span asp-validation-for="ConContent" class="text-danger"></span>
            </div>
        </div>
        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Save" class="btn btn-default" />
            </div>
        </div>
    </div>
</form>

