@model IEnumerable<OmegaProject.Models.ContactUs>

@{
    ViewData["Title"] = "Liên hệ";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="row">
    <div class="panel panel-default">
        <div class="panel-body">
            <h2>Liên hệ</h2>
            <a asp-action="Create">Thêm mới</a>
        </div>
    </div>
</div>
<div class="row">
    <div class="panel panel-default">
        <div class="panel-body">
            <table id="dynamic-table" class="table table-striped table-bordered table-hover">
                <thead>
                    <tr>
                        <th>
                            Tiêu đề
                        </th>
                        <th>
                            Người liên hệ
                        </th>
                        <th>
                            Email
                        </th>
                        <th>
                            Số điện thoại
                        </th>
                        <th>
                            Cập nhật
                        </th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>
                                @Html.DisplayFor(modelItem => item.ConTitle)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.ConName)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.ConEmail)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.ConPhone)
                            </td>
                            <td style="width:90px;text-align:center;">
                                <a asp-action="Edit" asp-route-id="@item.ConId" title="Edit"><i class="fa fa-pencil-square-o"></i></a> |
                                <a asp-action="Details" asp-route-id="@item.ConId" title="Details"><i class="fa fa-file-text-o"></i></a> |
                                <a asp-action="Delete" asp-route-id="@item.ConId" title="Delete"><i class="fa fa-times"></i></a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>
@section Scripts{
    <!-- inline scripts related to this page -->
    <script type="text/javascript">
        $(document).ready(function () {
            var oTable1 =
                $('#dynamic-table')
                    .dataTable({
                        bAutoWidth: true,
                        "aoColumns": [
                            null, null, null, null, { "bSortable": false }
                        ],
                        "aaSorting": [],
                        "language": {
                            "decimal": ".",
                            "emptyTable": "không có dữ liệu",
                            "info": "Hiện từ dòng _START_ đến _END_ trong tổng số _TOTAL_ dòng",
                            "infoEmpty": "Không hiển thị dòng nào",
                            "infoFiltered": "(được lọc từ tổng số _MAX_ dòng)",
                            "infoPostFix": "",
                            "thousands": ",",
                            "lengthMenu": "Hiện _MENU_ dòng",
                            "loadingRecords": "Loading...",
                            "processing": "Processing...",
                            "search": "",
                            "searchPlaceholder": "Tìm kiếm...",
                            "zeroRecords": "Không tìm thấy kết quả",
                            "paginate": {
                                "first": "Đầu",
                                "last": "Cuối",
                                "next": "Sau",
                                "previous": "Trước"
                            },
                            "aria": {
                                "sortAscending": ": activate to sort column ascending",
                                "sortDescending": ": activate to sort column descending"
                            }
                        }
                    });
            var tableTools_obj = new $.fn.dataTable.TableTools(oTable1, {
                "sRowSelector": "td:not(:last-child)",
                "sRowSelect": "single",
                "sSelectedClass": "success"
            });
        })
    </script>
}