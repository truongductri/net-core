@model OmegaProject.Models.Category

@{
    ViewData["Title"] = "Loại bài đăng";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Chỉnh sửa</h2>

<form asp-action="Edit">
    <div class="form-horizontal">
        <h4>Loại bài đăng</h4>
        <hr />
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <input type="hidden" asp-for="CateId" />
        <div class="form-group">
            <label class="col-md-2 control-label">Tên loại</label>
            <div class="col-md-10">
                <input asp-for="CateName" class="form-control" />
                <span asp-validation-for="CateName" class="text-danger"></span>
            </div>
        </div>
        <div class="form-group">
            <label class="col-md-2 control-label">Ghi chú</label>
            <div class="col-md-10">
                <input asp-for="CateNotes" class="form-control" />
                <span asp-validation-for="CateNotes" class="text-danger"></span>
            </div>
        </div>
        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <div class="checkbox">
                    <input asp-for="CateDisabled" />
                    <label>Không hiển thị</label>
                </div>
            </div>
        </div>
        <div class="form-group">
            <label class="col-md-2 control-label">Trạng thái</label>
            <div class="col-md-10">
                <select asp-for="StatusId" class="form-control" asp-items="ViewBag.StatusId"></select>
            </div>
        </div>
        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Save" class="btn btn-default" />
            </div>
        </div>
    </div>
</form>

<div>
    <a asp-action="Index">Back to List</a>
</div>

