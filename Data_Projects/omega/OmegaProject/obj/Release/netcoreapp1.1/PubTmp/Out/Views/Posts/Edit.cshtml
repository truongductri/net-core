@model OmegaProject.Models.Post

@{
    ViewData["Title"] = "Bài đăng";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Chỉnh sửa</h2>

<form asp-action="Edit">
    <div class="form-horizontal">
        <h4>Bài đăng</h4>
        <a asp-action="List">Trở lại danh sách</a>
        <hr />
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <input type="hidden" asp-for="PostId" />
        <input asp-for="PostDateCreate" type="hidden" />
        <input asp-for="PostUserCreate" type="hidden" />
        <div class="form-group">
            <label class="col-md-2 control-label">Tiêu đề</label>
            <div class="col-md-10">
                <input asp-for="PostTitle" class="form-control" />
                <span asp-validation-for="PostTitle" class="text-danger"></span>
            </div>
        </div>
        <div class="form-group">
            <label class="col-md-2 control-label">Nội dung</label>
            <div class="col-md-10">
                <textarea id="PostContent" asp-for="PostContent" class="form-control" ></textarea>
                <span asp-validation-for="PostContent" class="text-danger"></span>
            </div>
        </div>
        <div class="form-group">
            <label class="col-md-2 control-label">Mô tả</label>
            <div class="col-md-10">
                <input asp-for="PostDescription" class="form-control" />
                <span asp-validation-for="PostDescription" class="text-danger"></span>
            </div>
        </div>
        <div class="form-group">
            <label class="col-md-2 control-label">Nhãn dán</label>
            <div class="col-md-10">
                <input asp-for="PostLabel" class="form-control" required />
                <span asp-validation-for="PostLabel" class="text-danger"></span>
            </div>
        </div>
        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <div class="checkbox">
                    <input asp-for="PostDisabled" />
                    <label>Không hiển thị</label>
                </div>
            </div>
        </div>
        <div class="form-group">
            <label class="control-label col-md-2">Trạng thái</label>
            <div class="col-md-10">
                <select asp-for="StatusId" class="form-control" asp-items="ViewBag.StatusId"></select>
                <span asp-validation-for="StatusId" class="text-danger"></span>
            </div>
        </div>
        <div class="form-group">
            <label class="control-label col-md-2">Hạng loại</label>
            <div class="col-md-10">
                <select asp-for="CategoryId" class="form-control" asp-items="ViewBag.CategoryId"></select>
                <span asp-validation-for="CategoryId" class="text-danger"></span>
            </div>
        </div>
        <div class="form-group">
            <label class="control-label col-md-2">Hình ảnh</label>
            <div class="col-md-10">
                <select asp-for="PhotoId" class="form-control" asp-items="ViewBag.PhotoId"></select>
                <span asp-validation-for="PhotoId" class="text-danger"></span>
            </div>
        </div>
        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Save" class="btn btn-default" />
            </div>
        </div>
    </div>
</form>
@section Scripts{
    <script src="~/lib/ckeditor/ckeditor.js"></script>
    <script src="~/lib/ckeditor/adapters/jquery.js"></script>
    <script>
        $("#PostContent").ckeditor();
    </script>
}

