@model OmegaProject.Models.Customer

@{
    ViewData["Title"] = "Khách hàng";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Chỉnh sửa</h2>

<form asp-action="Edit">
    <div class="form-horizontal">
        <h4>Khách hàng</h4>
        <a asp-action="List">Trở lại danh sách</a>
        <hr />
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <input type="hidden" asp-for="CusId" />
        <input type="hidden" asp-for="CusDateCreate" />
        <div class="form-group">
            <label class="col-md-2 control-label">Mã khách hàng</label>
            <div class="col-md-10">
                <input asp-for="CusNo" class="form-control" />
                <span asp-validation-for="CusNo" class="text-danger"></span>
            </div>
        </div>
        <div class="form-group">
            <label class="col-md-2 control-label">Tên khách hàng</label>
            <div class="col-md-10">
                <input asp-for="CusName" class="form-control" />
                <span asp-validation-for="CusName" class="text-danger"></span>
            </div>
        </div>
        <div class="form-group">
            <label class="col-md-2 control-label">Địa chỉ</label>
            <div class="col-md-10">
                <input asp-for="CusAddress" class="form-control" />
                <span asp-validation-for="CusAddress" class="text-danger"></span>
            </div>
        </div>
        <div class="form-group">
            <label class="col-md-2 control-label">Website</label>
            <div class="col-md-10">
                <input asp-for="CusWeb" class="form-control" />
                <span asp-validation-for="CusWeb" class="text-danger"></span>
            </div>
        </div>
        <div class="form-group">
            <label class="col-md-2 control-label">Ghi chú</label>
            <div class="col-md-10">
                <input asp-for="CusNotes" class="form-control" />
                <span asp-validation-for="CusNotes" class="text-danger"></span>
            </div>
        </div>
        <div class="form-group">
            <label class="control-label col-md-2">Ngành hàng</label>
            <div class="col-md-10">
                <select asp-for="BraId" class="form-control" asp-items="ViewBag.BraId"></select>
                <span asp-validation-for="BraId" class="text-danger"></span>
            </div>
        </div>
        <div class="form-group">
            <label class="control-label col-md-2">Trạng thái</label>
            <div class="col-md-10">
                <select asp-for="StatusId" class="form-control" asp-items="ViewBag.StatusId"></select>
                <span asp-validation-for="StatusId" class="text-danger"></span>
            </div>
        </div>
        <div class="form-group">
            <label class="control-label col-md-2">Hình ảnh</label>
            <div class="col-md-10">
                <select asp-for="PhotoId" class="form-control" asp-items="ViewBag.PhotoId"></select>
                <span asp-validation-for="PhotoId" class="text-danger"></span>
            </div>
        </div>
        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Save" class="btn btn-default" />
            </div>
        </div>
    </div>
</form>


