            <div class="row">
                <div class="span12">
                    <div class="thumbnails">
                        @{ int i = 0;}
                        @foreach (Product item in Model)
                        {
                            if (i < 3)
                            {
                                <div class="span4" style="margin-bottom:10px;">
                                    <div class="thumbnail">
                                        <div class="overflow-hidden">
                                            <img src="@Url.Content("~/img/upload/" + (item.Photo == null ? "" : (item.Photo.PhotoThumbNail == null ? "" : item.Photo.PhotoThumbNail)))" style="display:block;margin:auto;" alt="">
                                            <a class="fancyme photo" href="@Url.Content("~/img/upload/" + (item.Photo == null ? "" : (item.Photo.PhotoThumbNail == null ? "" : item.Photo.PhotoThumbNail)))"><i class="icon-zoom-in"></i></a>
                                            <a asp-controller="Products" asp-action="Details" asp-route-id="@item.ProdId" class="link"><i class="icon-link"></i></a>
                                        </div>
                                        <div class="caption">
                                            <h5><a href="#">@item.ProdName</a></h5>
                                            <p>@item.ProdDescription</p>
                                            <p class="text-right"><a asp-controller="Products" asp-action="Details" asp-route-id="@item.ProdId" class="btn btn-flat btn-theme">Chi tiết</a></p>
                                        </div>
                                    </div>
                                </div>
                            }
                            i++;
                        }
